<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryDark">


    <ImageButton
        android:id="@+id/profile_afro_girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_beard_guy"
        android:layout_toStartOf="@+id/profile_business_guy"
        android:maxWidth="125dp"
        android:minHeight="125dp"
        android:minWidth="125dp"
        android:onClick="getImage"
        android:src="@drawable/afro_girl" />

    <ImageButton
        android:id="@+id/profile_business_guy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_headphones_girl"
        android:layout_alignParentEnd="true"
        android:minHeight="125dp"
        android:minWidth="125dp"
        android:onClick="getImage"
        android:src="@drawable/business_guy" />

    <ImageButton
        android:id="@+id/profile_beard_guy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_brunette_girl"
        android:layout_toStartOf="@+id/profile_afro_girl"
        android:minHeight="125dp"
        android:minWidth="125dp"
        android:onClick="getImage"
        android:src="@drawable/beard_guy" />

    <ImageButton
        android:id="@+id/profile_glasses_guy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_brunette_girl"
        android:layout_toEndOf="@+id/profile_brunette_girl"
        android:minHeight="125dp"
        android:minWidth="125dp"
        android:onClick="getImage"
        android:src="@drawable/glasses_guy" />

    <ImageButton
        android:id="@+id/profile_headphones_girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_glasses_guy"
        android:layout_toEndOf="@+id/profile_glasses_guy"
        android:minHeight="125dp"
        android:minWidth="125dp"
        android:onClick="getImage"
        android:src="@drawable/headphones_girl" />

    <ImageButton
        android:id="@+id/profile_brunette_girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_ponytail_girl"
        android:layout_toStartOf="@+id/profile_afro_girl"
        android:minHeight="125dp"
        android:minWidth="125dp"
        android:onClick="getImage"
        android:src="@drawable/brunette_girl" />

    <ImageButton
        android:id="@+id/profile_ponytail_girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_moustache_guy"
        android:layout_toEndOf="@+id/profile_moustache_guy"
        android:minHeight="125dp"
        android:minWidth="125dp"
        android:onClick="getImage"
        android:src="@drawable/ponytail_girl" />

    <ImageButton
        android:id="@+id/profile_moustache_guy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/profile_brunette_girl"
        android:layout_marginBottom="80dp"
        android:minHeight="125dp"
        android:minWidth="125dp"
        android:onClick="getImage"
        android:src="@drawable/moustache_guy" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Choose a profile avatar"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>