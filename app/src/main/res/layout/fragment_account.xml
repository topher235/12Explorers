<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/account_sign_out_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="?attr/actionBarSize"
        android:background="@drawable/button_round_corners"
        android:text="Sign Out" />

    <TextView
        android:id="@+id/account_num_points_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points earned: "
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/account_avatar_imgBtn" />

    <ImageButton
        android:id="@+id/account_avatar_imgBtn"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_round_corners"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:minHeight="150dp"
        android:minWidth="150dp"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>