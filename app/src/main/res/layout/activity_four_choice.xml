<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/four_choice_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:minHeight="75dp"
        android:minWidth="300dp"
        android:maxWidth="300dp"
        android:layout_centerHorizontal="true"
        android:text="Button"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/four_choice_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/four_choice_btn1"
        android:text="Button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:minHeight="75dp"
        android:minWidth="300dp"
        android:maxWidth="300dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/four_choice_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/four_choice_btn2"
        android:text="Button"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:minHeight="75dp"
        android:minWidth="300dp"
        android:maxWidth="300dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/four_choice_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/four_choice_btn3"
        android:text="Button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:minHeight="75dp"
        android:minWidth="300dp"
        android:maxWidth="300dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/four_choice_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/four_choice_is_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:text="TextView"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>